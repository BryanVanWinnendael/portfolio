---
import {
  PythonIcon,
  JavaIcon,
  ElixirIcon,
  PhoenixIcon,
  ReactIcon,
  CSharpIcon,
  SpringBootIcon,
  JavaScriptIcon,
  PostgreSQLIcon,
} from "@/components/icons"
import Layout from "@/layouts/Layout.astro"

import ImecImage from "@/assets/images/imec/imec.webp"
import ImecImage2 from "@/assets/images/imec/imec2.webp"
import ImecImage3 from "@/assets/images/imec/imec3.webp"
import ImecImage4 from "@/assets/images/imec/imec4.webp"
import ImecImage5 from "@/assets/images/imec/imec5.webp"
import ImecImage6 from "@/assets/images/imec/imec6.webp"
import ImecImage7 from "@/assets/images/imec/imec7.webp"
import ImecImage8 from "@/assets/images/imec/imec8.webp"
import ImecImage9 from "@/assets/images/imec/imec9.webp"

import BackButton from "@/components/backButton"
import { AnimatedHref } from "@/components/ui/animated-href"
import { ChevronRightIcon } from "lucide-react"
import UcllProjects from "@/components/ucllProjects"
---

<Layout title="UCLL | Bryan Van Winnendael">
  <main>
    <div class="w-full mb-2">
      <BackButton client:load />
    </div>

    <h1
      class="text-4xl font-extrabold tracking-tight lg:text-5xl text-left mt-2"
    >
      Applied Computer Science, UCLL
    </h1>
    <div class="my-2 flex gap-2 flex-wrap">
      <div class="flex gap-2 border w-fit rounded-lg px-2 py-1 items-center">
        <PythonIcon width={16} height={16} /> Python
      </div>
      <div class="flex gap-2 border w-fit rounded-lg px-2 py-1 items-center">
        <JavaIcon width={24} height={24} /> Java
      </div>
      <div class="flex gap-2 border w-fit rounded-lg px-2 py-1 items-center">
        <SpringBootIcon width={24} height={24} /> Spring Boot
      </div>
      <div class="flex gap-2 border w-fit rounded-lg px-2 py-1 items-center">
        <ElixirIcon width={24} height={24} /> Elixir
      </div>
      <div class="flex gap-2 border w-fit rounded-lg px-2 py-1 items-center">
        <PhoenixIcon width={24} height={24} /> Phoenix
      </div>
      <div class="flex gap-2 border w-fit rounded-lg px-2 py-1 items-center">
        <CSharpIcon width={24} height={24} /> C#
      </div>
      <div class="flex gap-2 border w-fit rounded-lg px-2 py-1 items-center">
        <JavaScriptIcon width={24} height={24} /> JavaScript
      </div>
      <div class="flex gap-2 border w-fit rounded-lg px-2 py-1 items-center">
        <ReactIcon width={24} height={24} /> React
      </div>
      <div class="flex gap-2 border w-fit rounded-lg px-2 py-1 items-center">
        <PostgreSQLIcon width={24} height={24} /> PostgreSQL
      </div>
    </div>
    <p class="flex gap-2 items-center dark:text-gray-600 text-gray-400 mt-2">
      Projects for <a
        href="https://www.ucll.be"
        target="_blank"
        class="text-blue-500">UCLL</a
      >
    </p>

    <div class="mt-4 flex flex-col gap-4">
      <div>
        <h2
          class="scroll-m-20 pb-2 text-3xl font-semibold tracking-tight first:mt-0"
        >
          Overview
        </h2>
        <p>
          I studied Applied Computer Science at UCLL. During my studies, I
          learned a lot about programming, databases, and web development.
        </p>
      </div>
    </div>

    <div class="border rounded-lg p-4 mt-4">
      <p>Want to see the projects?</p>
      <UcllProjects client:load />
    </div>
  </main>
</Layout>
