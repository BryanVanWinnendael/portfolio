---
import ProjectsBento from "@/components/projectsBento"
import Layout from "@/layouts/Layout.astro"
import { ChevronRight } from "lucide-react"
---

<Layout title="Projects | Bryan Van Winnendael">
  <main class="flex flex-col gap-4">
    <h1 class="scroll-m-20 text-4xl font-extrabold tracking-tight lg:text-5xl">
      Projects
    </h1>
    <ProjectsBento client:load />
    <div class="border rounded-lg p-4">
      <p>Want to see what I'm learning?</p>
      <a
        href="https://github.com/BryanVanWinnendael/Learning"
        target="_blank"
        class="text-blue-500 duration-100 cursor-pointer flex items-center w-fit"
        >See repository<ChevronRight size={16} /></a
      >
    </div>
  </main>
</Layout>
